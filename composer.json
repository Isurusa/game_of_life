{
  "name": "isurusa/game-of-life-php",
  "description": "Game of Life implementation in PHP with CLI, web, and PHPUnit tests.",
  "type": "project",
  "require": {
    "php": ">=8.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "scripts": {
    "test": "phpunit --colors=always --bootstrap vendor/autoload.php tests"
  }
}
